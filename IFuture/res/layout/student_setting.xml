<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 版本信息 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/round_rect_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/receive_message_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="接收推送消息"
                        android:textColor="@color/setting_text_color" />

                    <CheckBox
                        android:id="@+id/on_off_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/ispush_checbox_selector" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <RelativeLayout
                    android:id="@+id/cache_rl"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="清除本地缓存"
                        android:textColor="@color/setting_text_color" />

                    <TextView
                        android:id="@+id/cachesize_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/right_arrow_selector"
                        android:gravity="center|right"
                        android:text="0.5M"
                        android:textColor="@color/setting_text_color" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <RelativeLayout
                    android:id="@+id/versionUpate_rl"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="新版本检测"
                        android:textColor="@color/setting_text_color" />

                    <TextView
                        android:id="@+id/version_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/right_arrow_selector"
                        android:gravity="center"
                        android:text="已是最新版本"
                        android:textColor="@color/setting_text_color" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <!--
                <TextView
                    android:id="@+id/qr_shared_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/ic_qr"
                    android:text="二维码分享"
                    android:textColor="@color/main_name_color" /> 

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/main_line_color" />
-->
                <TextView
                    android:id="@+id/sms_shared_tv"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right_arrow_selector"
                    android:text="分享"
                    android:textColor="@color/setting_text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />


                <TextView
                    android:id="@+id/change_pwd_tv"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right_arrow_selector"
                    android:text="修改密码"
                    android:textColor="@color/setting_text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <TextView
                    android:id="@+id/about_tv"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right_arrow_selector"
                    android:text="关于我们"
                    android:textColor="@color/setting_text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <TextView
                    android:id="@+id/system_feedback_tv"
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right_arrow_selector"
                    android:text="系统反馈"
                    android:textColor="@color/setting_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/round_rect_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_sina"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="新浪微博"
                        android:textColor="@color/setting_third_user_textcolor" />

                    <TextView
                        android:id="@+id/weibo_tv"
                        style="@style/setting_bind_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <RelativeLayout
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_qq"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="QQ"
                        android:textColor="@color/setting_third_user_textcolor" />

                    <TextView
                        android:id="@+id/qq_tv"
                        style="@style/setting_bind_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg_color" />

                <RelativeLayout
                    style="@style/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_wechat"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="微信"
                        android:textColor="@color/setting_third_user_textcolor" />

                    <TextView
                        android:id="@+id/wechart_tv"
                        style="@style/setting_bind_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/exit_application_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/logout_btn_selector"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>