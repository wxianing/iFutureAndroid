<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/complain_text_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/complain_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_textcolor"
            android:textSize="@dimen/sp12"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:text="@string/complian_object" />

        <TextView
            android:id="@+id/complain_object_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:singleLine="true"
            android:textColor="@color/complain_bottom_bg_color"
            android:text="Cindy 谢星-留学规划师" />

        <TextView
            android:id="@+id/complain_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:textColor="@color/gray_textcolor"
            android:text="2015.2.3 15:37"
            android:layout_marginRight="@dimen/dp10" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@drawable/dashed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/complain_content_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp10"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="老师上课不认真，不负责" />

        <Button
            android:id="@+id/hand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hand_btn_selector"
            android:text="确认处理"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:minEms="4"
            android:textSize="@dimen/sp13"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:layout_marginRight="@dimen/dp10" />
    </LinearLayout>

    <Button
        android:id="@+id/hand_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hand_btn_selector"
        android:text="确认处理"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        android:layout_marginBottom="@dimen/dp10"
        android:visibility="gone"/>

</LinearLayout>